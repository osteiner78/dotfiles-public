[Unit]
Description=nm-applet (Wayland indicator)
PartOf=hypr-apps.target
After=graphical-session.target waybar.service NetworkManager.service
; Wants=waybar.service
; StartLimitIntervalSec=60
; StartLimitBurst=10

[Service]
Type=exec
; ExecStartPre=/usr/bin/sleep 1
; Environment=G_MESSAGES_DEBUG=all
ExecStart=/usr/bin/nm-applet --indicator
Restart=on-failure
; Restart=always
RestartSec=2
; RemainAfterExit=no

[Install]
WantedBy=hypr-apps.target
